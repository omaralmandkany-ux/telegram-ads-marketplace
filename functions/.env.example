# Environment Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Firebase Project
FIREBASE_PROJECT_ID=your_firebase_project_id

# TON Configuration
TON_NETWORK=testnet
TON_API_KEY=your_toncenter_api_key
TON_HOT_WALLET_MNEMONIC=word1 word2 word3 ... word24

# App URL (for Mini App)
APP_URL=https://your-project.web.app

# Escrow Settings
ESCROW_TIMEOUT_HOURS=48
POST_VERIFICATION_HOURS=24
POST_CHECK_INTERVAL_MINUTES=10

# MTProto Userbot (for verified channel analytics)
# Get API ID/Hash from https://my.telegram.org
# Generate string session using GramJS StringSession
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_STRING_SESSION=your_gramjs_string_session
