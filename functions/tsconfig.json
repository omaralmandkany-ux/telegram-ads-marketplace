{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": false,
        "target": "ES2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}